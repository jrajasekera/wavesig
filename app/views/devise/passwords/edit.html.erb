<div id="change-password-container">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field text-field">
      <% if @minimum_password_length %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", :class => 'text-input form-control', :placeholder => 'New Password ( > ' + @minimum_password_length.to_s + ' chars)' %>
      <% else %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", :class => 'text-input form-control', :placeholder => 'New Password' %>
      <% end %>
    </div>

    <div class="field text-field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'text-input form-control', :placeholder => 'Confirm New Password' %>
    </div>

    <div class="actions submit-btn">
      <%= f.submit "Change my password", :class => 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
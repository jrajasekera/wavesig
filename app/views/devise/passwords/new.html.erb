<div class="content-container-centered-dark">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field text-field">
<!--      <%#= f.label :email %><br />-->
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => 'Email', :class => 'text-input form-control' %>
    </div>

    <div class="field recaptcha-field">
      <%= flash[:recaptcha_error] %>
      <%= recaptcha_tags %>
    </div>

    <div class="actions submit-btn">
      <%= f.submit "Send me instructions", :class => 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
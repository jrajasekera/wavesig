<div class="col-sm-6 justify-content-center align-self-center">
  <div class="notification-text">
    <%= "#{notification.actor.fname} #{notification.actor.lname}" %> has accepted your friend request.
  </div>
</div>

<div class="col-sm-3 notification-time justify-content-center align-self-center">
  <%= notification.created_at.strftime("%l:%M %p") %>
</div>

<div class="col-sm-3 notification-view-btn">
  <% if not notification.target.nil? %>
    <a href=<%= main_app.friends_path %> class="btn btn-light btn-sm">
      <div class="collapse-arrow" >See Friends <i class="arrow right"></i></div>
    </a>
  <% end %>
</div>